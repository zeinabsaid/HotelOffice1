@page "/rooms"

@* لسنا بحاجة إلى أي جمل using إضافية هنا *@

<PageTitle>Rooms Management</PageTitle>

<h1>Rooms Management</h1>

<a href="/rooms/add" class="btn btn-success mb-3">
    <span class="bi bi-plus-circle-fill"></span> Add New Room
</a>

<!-- مربع البحث -->
<div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Search..." value="@SearchTerm" @oninput="OnSearchInput" />
</div>

<!-- الجدول -->
<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Number</th>
                <th>Type</th>
                <th>Price/Night</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in _roomList)
            {
                    <tr>
                        <td>@room.RoomNumber</td>
                        <td>@room.RoomType</td>
                        <td>@room.PricePerNight.ToString("C")</td>
                        <td>
                            <button class="btn btn-sm btn-info" @onclick="() => ShowDetails(room)">
                                <i class="bi bi-eye-fill"></i> Details
                            </button>
                            <a href="@($"rooms/edit/{room.Id}")" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteRoom(room.Id)">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

<!-- المودال (النافذة المنبثقة) -->
@if (_selectedRoom != null)
{
        <div class="modal-backdrop fade show"></div>
        <div class="modal fade show" style="display:block" @onclick="CloseDetailsModal" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" @onclick:stopPropagation="true">
                    <div class="modal-header">
                        <h5 class="modal-title">Room Details: @_selectedRoom.RoomNumber</h5>
                        <button type="button" class="btn-close" @onclick="CloseDetailsModal"></button>
                    </div>
                    <div class="modal-body">

                    @* ==> هذا هو السطر المصحح والنهائي <== *@
                        <RoomDetailCard RoomData="_selectedRoom" />

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDetailsModal">Close</button>
                    </div>
                </div>
            </div>
        </div>
}